// This is your Prisma schema file,
// learn more about it in the docs: https://pris.ly/d/prisma-schema

generator client {
  provider      = "prisma-client-js"
  binaryTargets = ["native", "debian-openssl-3.0.x"]
}

datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
}

model User {
  id           Int           @id @default(autoincrement())
  email        String        @unique
  name         String?
  password     String
  created_at   DateTime      @default(now())
  updated_at   DateTime      @updatedAt
  transactions Transaction[]

  @@map("tbl_user")
}

model TransactionCategory {
  id           String        @id @default(uuid())
  name         String        @unique
  icon         Bytes         @db.ByteA
  description  String?
  created_at   DateTime      @default(now())
  updated_at   DateTime      @updatedAt
  transactions Transaction[] @relation("TransactionCategory")

  @@map("tbl_transaction_category")
}

model Transaction {
  id                  String              @id @default(uuid())
  name                String              @unique
  value               Float               @default(0)
  type                TransactionType     @default(INCOME)
  recurrence          Recurrence          @default(NONE)
  recurrence_interval Int                 @default(0)
  description         String?
  created_at          DateTime            @default(now())
  updated_at          DateTime            @updatedAt
  user                User                @relation(fields: [user_id], references: [id])
  user_id             Int
  category            TransactionCategory @relation("TransactionCategory", fields: [category_id], references: [id])
  category_id         String

  @@index([user_id, name])
  @@index([user_id, type])
  @@index([user_id, category_id])
  @@index([type, recurrence, recurrence_interval])
  @@map("tbl_transaction")
}

enum TransactionType {
  INCOME
  OUTCOME
}

enum Recurrence {
  NONE
  DAILY
  WEEKLY
  MONTHLY
  YEARLY
}
